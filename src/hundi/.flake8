[flake8]
max-line-length=120
select=E,W,F,N,I
ignore=W503
exclude=.git,__pycache__,.ipynb_checkpoints,venv,build,dist
max-complexity=10


[tox]
envlist=py39,flake8

[tox:travis]
3.9=py39,flake8

[testenv]
deps=-rrequirements.txt
       setuptools
commands=python setup.py test

[testenv:flake8]
deps=flake8
commands=python setup.py flake8

[pycodestyle]
max_line_length = 120